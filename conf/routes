# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                         							controllers.Application.index()

POST 	/login												controllers.Application.checkLogin()

POST 	/register											controllers.Application.register()

#View, delete and modify user accounts (ADMIN)
GET		/user/:id											controllers.Application.getUserAccount(id: String)
PUT		/user/:id											controllers.Application.updateUserAccount(id: String)
DELETE  /user/:id											controllers.Application.deleteUserAccount(id: String)



GET     /categories/All										controllers.Application.mainCategories()
GET		/categories/:parentCat/:childCat					controllers.Application.categories(parentCat: String,childCat: String)


GET		/search/:searchString								controllers.Application.search(searchString: String)

GET		/images/:imageName									controllers.Application.getImage(imageName: String)

#::;:::::::::::::CART:::::::::::::::::::::
#Every user has a cart

# Get the items in the cart
GET 	/cart/:cartID										controllers.Application.getCartItems(cartID: String)
# Update the items in the cart (every user has a cart)
PUT		/cart/:cartID										controllers.Application.updateCartItems(cartID: String)

#:::::::::::::::PRODUCTINFO:::::::::::::::::::::
GET     /product/:productID 								controllers.Application.getProductInfo(productID: String)

#GET		/orders/:orderId									controllers.Application.getOrderInfo(OrderId: String)







# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file             	   						controllers.Assets.at(path="/public", file)
