# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                         							controllers.Application.index()

POST 	/login												controllers.Application.checkLogin()

POST 	/register											controllers.Application.register()

#View, delete and modify user accounts (ADMIN)
GET		/user/:id											controllers.Application.getUserAccount(id: String)
PUT		/user/:id											controllers.Application.updateUserAccount(id: String)
DELETE  /user/:id											controllers.Application.deleteUserAccount(id: String)



GET     /categories/All										controllers.Application.mainCategories()
GET		/categories/:parentCat/:childCat					controllers.Application.categories(parentCat: String,childCat: String)

GET		/search/:searchString								controllers.Application.search(searchString: String)
#images for productInfo (large)
GET		/images/:imageName									controllers.Application.getImage(imageName: String)
#images for search, cart, etc (small)
GET		/images/scaled/:imageName							controllers.Application.getScaledImage(imageName: String)
#::;:::::::::::::CART:::::::::::::::::::::
#Every user has a cart

# Get the items in the cart
GET 	/cart/:userId										controllers.Application.getCartItems(userId: Integer)
# Add & DELETE the items in the cart (every user has a cart)
POST	/cart/:userId/:productId							controllers.Application.addItemToCart(userId: Integer, productId: Integer)
DELETE  /cart/:userId/:productId							controllers.Application.deleteItemFromCart(userId: Integer, productId: Integer)

#:::::::::::::::PRODUCTINFO:::::::::::::::::::::
GET     /product/:productId 								controllers.Application.getProductInfo(productId: Integer)

#:::::::::::::::SELLPRODUCT:::::::::::::::::::::
POST	/sell/:productId									controllers.Application.getSellProduct(productId: Integer)

#GET	/orders/:orderId								controllers.Application.getOrderInfo(OrderId: String)







# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file             	   						controllers.Assets.at(path="/public", file)
